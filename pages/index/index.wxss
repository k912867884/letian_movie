/**index.wxss**/

page {
  background-clip: #ededed;
  display: flex;
  height: 100%;
  flex-direction: column;
  justify-content: flex-start;
}
.content{
  min-height: 100%;
  padding:0;
}
swiper{
  height:210px;
}
.swiper-item{
  padding:0 !important;
}
swiper-item image{
 width:100%;
  height:210px;
}
.show{
  height:2rem;
  border:1px solid #aaa;
  color:#343434;
  margin:10px 0 20px 0;
  text-align:center;
  font-size:20px;
  font-weight:bold;
  background-image: linear-gradient(to bottom,#fff,#337AB7);
  box-shadow:6px 5px 15px 1px #000;
  border-radius:6px;
  line-height:2rem;
}
.movie{
  margin-top:5px;
  padding:0 10px;
  padding-bottom:5px;
  display:flex;
  border-bottom:1px solid #aaa;
}
.movie .pic image{
  width:100px;
  height:150px;
  vertical-align: top;
  border-radius:6px;
}
.movie_info{
  width:100%;
  padding-left:20px;
}
.base_header{
  font-size: 20px;
  padding-top:14px;
  line-height:20px;
  font-weight:bold;
}
.base_info{
  padding-top:10px;
}
.base_details{
  width:14rem;
  padding-top:10px;
}
.text_nowrap{
  width:70%;
  text-overflow: ellipsis;
  overflow:hidden;
  white-space: nowrap;
}
.sc{
  color:#f40;
}