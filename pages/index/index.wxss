/**index.wxss**/

page {
  background-clip: #ededed;
  display: flex;
  height: 100%;
  flex-direction: column;
  justify-content: flex-start;
}
.content{
  min-height: 100%;
  padding:0;
}
swiper{
  height:210px;
}
.swiper-item{
  padding:0 !important;
}
swiper-item image{
 width:100%;
 height:210px;
}
.show_bar{
  height:4rem;
  background:rgb(77, 194, 194,0.5);
  border:1px solid #fff;
}
.show{
  height:2.5rem;
  border:1px solid #aaa;
  color:#343434;
  text-align:center;
  font-size:20px;
  font-weight:bold;
  border-radius:100px;
  margin:0 auto;
  box-shadow:6px 5px 10px 1px #000;
  background-color:#fff;
  line-height:2.5rem;
  transform:translate(0,0.4rem)
}
.movie{
  margin-top:5px;
  padding:20px;
  box-sizing:border-box;
  display:flex;
  box-shadow:28px 6px 10px #000;
}
.movie .pic image{
  width:100px;
  height:150px;
  vertical-align: top;
  border-radius:6px;
}
.movie_info{
  width:100%;
  padding-left:20px;
}
.base_header{
  font-size: 20px;
  padding-top:14px;
  line-height:20px;
  font-weight:bold;
}
.base_info{
  padding-top:10px;
}
.base_details{
  width:14rem;
  padding-top:10px;
}
.text_nowrap{
  width:70%;
  text-overflow: ellipsis;
  overflow:hidden;
  white-space: nowrap;
}
.sc{
  color:#f40;
}